<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sayfabackground"
    tools:context="com.vuralsoftware.vbgs.fragments.ilacekle.Ilacekle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clilacekle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="55dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ilacad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="172dp"
                    android:background="@drawable/input2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="İlaç Adı :"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColorHint="#000000" />

                <EditText
                    android:id="@+id/dozmiktar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/input2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Doz/Miktar :"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColorHint="#000000" />

                <EditText
                    android:id="@+id/ilactarih"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/input2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="İlaç Uygulandığı Tarih :"
                    android:inputType="date"
                    android:minHeight="48dp"
                    android:textColorHint="#000000" />

                <EditText
                    android:id="@+id/ilacsaat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/input2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="İlaç Uygulandığı Saat :"
                    android:inputType="time"
                    android:minHeight="48dp"
                    android:textColorHint="#000000" />

                <Button
                    android:id="@+id/kaydetbtnilac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="100dp"
                    android:text="Kaydet" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>